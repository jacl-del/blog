#include<iostream>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        if(n%2==0) cout<<"NO"<<endl;
        else{
            cout<<"YES"<<endl;
            int x=(3*n+3)/2,y=x+n-1;
            int k=y-2*n;
            while(k<=y-k){
                cout<<k<<" "<<y-k<<endl;
                y--,k++;
            }
            k=1;
            while(k<x-n-1){
                cout<<k<<" "<<y-k<<endl;
                y--,k++;
            }
        }
    }
    return 0;
}
